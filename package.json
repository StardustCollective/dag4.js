{
  "name": "@stardust-collective/dag4-monorepo",
  "version": "2.2.1",
  "description": "Constellation HyperGraph Network JavaScript API",
  "author": "Frank Fox",
  "email": "ffox77@gmail.com",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "types/index.d.ts",
  "homepage": "https://github.com/StardustCollective/dag4.js#readme",
  "scripts": {
    "clean": "rimraf dist/",
    "clean:dag4": "cd packages/dag4 && npm run clean:all",
    "clean:dag4-core": "cd packages/dag4-core && npm run clean:all",
    "clean:dag4-keyring": "cd packages/dag4-keyring && npm run clean:all",
    "clean:dag4-keystore": "cd packages/dag4-keystore && npm run clean:all",
    "clean:dag4-ledger": "cd packages/dag4-ledger && npm run clean:all",
    "clean:dag4-network": "cd packages/dag4-network && npm run clean:all",
    "clean:dag4-wallet": "cd packages/dag4-wallet && npm run clean:all",
    "clean:dag4-xchain-ethereum": "cd packages/dag4-xchain-ethereum && npm run clean:all",
    "clean:all": "rimraf dist/ && rimraf node_modules && npm run clean:dag4 && npm run clean:dag4-core && npm run clean:dag4-keyring && npm run clean:dag4-keystore && npm run clean:dag4-ledger && npm run clean:dag4-network && npm run clean:dag4-wallet && npm run clean:dag4-xchain-ethereum",
    "prebuild": "npm run clean",
    "build-rollup": "rollup -c scripts/config/rollup.config.js && rollup -c scripts/config/rollup.config.js --environment NODE_ENV:production",
    "build-all": "npm run build && npm run build-rollup",
    "build": "npm run build --workspaces",
    "pack:all": "npm pack --workspaces",
    "prerelease": "npm run build && npm version patch --no-git-tag-version",
    "release": "node ./scripts/package/copy && npm run release:npm",
    "release:npm": "npm publish ./dist -access public",
    "release:preflight": "npm pack ./dist --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StardustCollective/dag4.js.git"
  },
  "bugs": {
    "url": "https://github.com/StardustCollective/dag4.js/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.42.4",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript-paths": "^1.2.2",
    "standard-version": "^9.0.0",
    "typescript": "^4.6.4"
  },
  "workspaces": [
    "packages/dag4-core",
    "packages/dag4-network",
    "packages/dag4-keyring",
    "packages/dag4-keystore",
    "packages/dag4-wallet",
    "packages/dag4-xchain-ethereum",
    "packages/dag4",
    "packages/dag4-ledger",
    "packages/scratch"
  ],
  "dependencies": {
    "npm": "^8.10.0"
  }
}
